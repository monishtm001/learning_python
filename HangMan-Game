words = [ "apple", "banana", "orange", "grape", "mango",
    "python", "coding", "program", "developer", "computer",
    "island", "treasure", "pirate", "adventure", "escape",
    "river", "mountain", "forest", "desert", "ocean",
    "school", "college", "student", "teacher", "exam",
    "music", "guitar", "piano", "drums", "song",
    "cricket", "football", "tennis", "chess", "game",
    "robot", "engineer", "science", "machine", "future"]
import random
life =6
generated_word=random.choice(words)
print("Generating a Random word: " + generated_word)
length_of_word=len(generated_word)
dash_placeholder=""
for dash in range(length_of_word):
    dash_placeholder+="_"
print(dash_placeholder)

Game_over = False
empty_list = []
while not Game_over:
    guessed_word = input("Enter a Random Letter:").lower()
    display=""
    for let in generated_word:
        if guessed_word==let:
            display+=let
            empty_list.append(let)
        elif let in empty_list:
            display+=let
        else:
            display+= "_"

    if "_" not in display:
         Game_over = True
         print("You Win.")

    print(display)

    if guessed_word not in generated_word:
        life-=1
        if life == 0:
             Game_over=True
             print("You loose")

   
